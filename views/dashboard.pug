    link(href="css/css/bootstrap.min.css", rel="stylesheet")
    link(href="css/css/dashboard.css", rel="stylesheet")
    title Stay Clean Initiative
  body
    include navbar.pug         
    main.dash-content
        .container-fluid
            .row.dash-row
              .col-lg-4
                .stats.stats-primary
                  h3.stats-title  Employee List 
                  .stats-content
                    .stats-icon
                      i.fas.fa-user
                    .stats-data
                      .stats-number 20
                      .stats-change
                        span.stats-percentage 
                        span.stats-timeframe
                    .spur-card-menu
                      .dropdown.show
                        a.spur-card-menu-link(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                        .dropdown-menu.dropdown-menu-right(aria-labelledby='dropdownMenuLink')
                          a.dropdown-item(href='#') View Employee List
                          a.dropdown-item(href='#') Add Employee
                          a.dropdown-item(href='#') Update Employee
                          a.dropdown-item(href='#') Delete Employee
              .col-lg-4
                .stats.stats-success
                  h3.stats-title  Sales Revenue Tracker
                  .stats-content
                    .stats-icon
                      i.fas.fa-cart-arrow-down
                    .stats-data
                      .stats-number UGX 1,225,541
                      .stats-change
                        span.stats-percentage +20%
                        span.stats-timeframe from last month
                    .spur-card-menu
                      .dropdown.show
                        a.spur-card-menu-link(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                        .dropdown-menu.dropdown-menu-right(aria-labelledby='dropdownMenuLink')
                          a.dropdown-item(href='#') View Sales tracker
                          a.dropdown-item(href='#') Export Reports
              .col-xl-4
                .stats.stats-primary
                  h3.stats-title  Service request 
                  .stats-content
                    .stats-icon
                      i.fas.fa-phone
                    .stats-data
                      .stats-number 5
                  .spur-card-menu
                      .dropdown.show
                        a.spur-card-menu-link(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                        .dropdown-menu.dropdown-menu-right(aria-labelledby='dropdownMenuLink')
                          a.dropdown-item(href='#') Add service request
                          a.dropdown-item(href='#') Assign request to truck
                          a.dropdown-item(href='#') View service delivery progress
                          a.dropdown-item(href='#') View completed service request
            .row
              .col-lg-4
                .stats.stats-primary
                  h3.stats-title  Trucks List 
                  .stats-content
                    .stats-icon
                      i.fas.fa-user
                    .stats-data
                      .stats-number 9
                      .stats-change
                        span.stats-percentage 
                        span.stats-timeframe
                    .spur-card-menu
                      .dropdown.show
                        a.spur-card-menu-link(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                        .dropdown-menu.dropdown-menu-right(aria-labelledby='dropdownMenuLink')
                          a.dropdown-item(href='#') Update Trucks
                          a.dropdown-item(href='#') Assign employees to truck
                          a.dropdown-item(href='#') View truck status                          
              .col-lg-8
                .stats.stats-success
                  h3.stats-title  Truck Operator wages
                  .stats-content
                    .stats-icon
                      i.fas.fa-cart-arrow-down
                    .stats-data
                      .stats-number UGX 250,541
                      .stats-change
                        span.stats-percentage +17.5%
                        span.stats-timeframe due this month
              .col-lg-6
                .card.spur-card
                  .card-header
                    .spur-card-icon
                      i.fas.fa-chart-bar
                    .spur-card-title  Sales Report
                    .spur-card-menu
                      .dropdown.show
                        a.spur-card-menu-link(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                        .dropdown-menu.dropdown-menu-right(aria-labelledby='dropdownMenuLink')
                          a.dropdown-item(href='#') View report
                          a.dropdown-item(href='#') Update report
                          a.dropdown-item(href='#') Export report
                  .card-body.spur-card-body-chart
                    canvas#spurChartjsBar
                    script.
                      var ctx = document.getElementById("spurChartjsBar").getContext('2d');
                      var myChart = new Chart(ctx, {
                      type: 'bar',
                      data: {
                      labels: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
                      datasets: [{
                      label: 'Blue',
                      data: [12, 19, 3, 5, 2],
                      backgroundColor: window.chartColors.primary,
                      borderColor: 'transparent'
                      }]
                      },
                      options: {
                      legend: {
                      display: false
                      },
                      scales: {
                      yAxes: [{
                      ticks: {
                      beginAtZero: true
                      }
                      }]
                      }
                      }
                      });
              .col-xl-6 
                .card.spur-card
                  .card-header
                    .spur-card-icon
                      i.fas.fa-bell
                    .spur-card-title  Notifications 
                  .card-body
                    .notifications
                      a.notification(href='#!')
                        .notification-icon
                          i.fas.fa-inbox
                        .notification-text New comment
                        span.notification-time 21 days ago
                      a.notification(href='#!')
                        .notification-icon
                          i.fas.fa-inbox
                        .notification-text New comment
                        span.notification-time 21 days ago
                      a.notification(href='#!')
                        .notification-icon
                          i.fas.fa-inbox
                        .notification-text New comment
                        span.notification-time 21 days ago
                      .notifications-show-all
                        a(href='#!') Show all
