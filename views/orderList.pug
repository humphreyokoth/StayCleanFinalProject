doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Login
  link(rel='stylesheet' href='/css/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/css/employeeList.css')
nav.navbar.fixed-top.navbar-expand-lg.navbar-dark.bg-dark
  .container-fluid
    a.navbar-brand(href='/') Stay Clean
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.ms-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link.active(aria-current='page' href='/') Home
        li.nav-item
          a.nav-link.active(aria-current='page' href='/employee/createEmployee') Add New Employee
        li.nav-item
          a.nav-link.active(aria-current='page' href='/order/list') Orders
        li.nav-item
          a.nav-link.active(aria-current='page' href='/earning') Earnings  
        li.nav-item
          a.nav-link.active(aria-current='page' href='/trucks') Trucks  
      form.d-flex(method='POST' action='/logout')
        a(class="btn.btn-outline-success login-link" href='/login') LOGOUT         
.card
  .card-header
    h4 Order List
  .row
    .col-md-4
      form.d-flex
        input.form-control.me-4(type='search' placeholder='Search' aria-label='Search')
        button.btn.btn-outline-success(type='submit') Search
  .card-body
    table.table
        thead.table-responsive.table-dark
            th Name 
            th NIN            
            th Contact
            th Location
            th Service
            th Request
            th Request Time
            th Conductors    
            th Update Order
            th Delete Order
        tbody 
            if users.length 
            each user in users 
                tr

                    td #{user.username}
                    td #{user.nin}
                    td #{user.contact}
                    td #{user.location}
                    td #{user.service} 
                    td #{user.request} 
                    td #{user.time}  
                    td #{user.servicefee}                            
                    td
                            a(href='/order/update/'+user._id) Update 
                    td
                            form(method="post" action='/order/delete')
                                            input(type="hidden", placeholder="", name="id", value=user._id)
                                            button.btn.btn-dark.btn-block(type="submit") Delete        
script(src=' https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js')
script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js')
