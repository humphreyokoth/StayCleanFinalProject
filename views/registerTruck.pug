doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title REGISTER TRUCKS
  link(rel='stylesheet' href='css/css/bootstrap.min.css')
  link(rel='stylesheet' href='css/css/login.css')
nav.navbar.fixed-top.navbar-expand-lg.navbar-dark.bg-dark
  .container-fluid
    a.navbar-brand(href='/') Stay Clean
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.ms-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link.active(aria-current='page' href='/') Home
        li.nav-item
          a.nav-link.active(aria-current='page' href='/assigntrucks') Register Truck          
      form.d-flex        
        a(class="btn.btn-outline-success login-link" href='/login') LOGIN
.card
  .card-header
    h4 Register Truck
  .card-body
    form.row.g-3(method='POST' action='/registertruck' name='register' onSubmit='return validation();')
      .col-md-12
        label.form-label(for='registration number') Truck number
        input#firstname.form-control(type='text' name='trucknumber')      
      .col-md-12
        label.form-label(for='inputcodenumber') Truck code number
        input#inputcodenumber.form-control(type='text'  name='truckcodenumber')    
      .col-md-12
        label.form-label(for='inputService') Service
        select#inputrequests.form-select(name='service')
          option(value='Choose') Choose
          option(value='Garbage Collection') Garbage Collection
          option(value='Waste Disposal') Waste Disposal            
      .col-12
        button.btn.btn-primary(type='submit') Register
