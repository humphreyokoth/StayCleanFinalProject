doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Login
  link(rel='stylesheet' href='css/css/bootstrap.min.css')
  link(rel='stylesheet' href='css/css/login.css')
nav.navbar.fixed-top.navbar-expand-lg.navbar-dark.bg-dark
  .container-fluid
    a.navbar-brand(href='/') Stay Clean
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.ms-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link.active(aria-current='page' href='/') Home    
      form.d-flex
        a(class='btn.btn-outline-success login-link' href='/login') LOGIN
          
.card
  .card-header
    h4 Login
  .card-body
    form.row.g-3.orderform(method='POST' action='/login' name='login' onSubmit='return validation();')
      .col-md-12
        label.form-label(for='name') User name 
        input#inputusername.form-control(type='name' placeholder='user name' name='username')
      .col-md-12
        label.form-label(for='inputPassword4') Password
        input#inputPass.form-control(type='password' name='password')
      .col-12
        button.btn.btn-primary.btn2(type='submit') Login
script(src='/css/js/login.js')         
script(src=' https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js')
script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js')
