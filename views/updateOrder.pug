doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Update order
  link(rel='stylesheet' href='/css/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/css/updateEmployee.css')
nav.navbar.fixed-top.navbar-expand-lg.navbar-dark.bg-dark
  .container-fluid
    a.navbar-brand(href='/') Stay Clean
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.ms-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link.active(aria-current='page' href='/') Home        
        li.nav-item
          a.nav-link.active(aria-current='page' href='/order/list') Order List
      form.d-flex
        a(class="btn.btn-outline-success login-link" href='/login') LOGOUT           
.card
  .card-header
    h4 Update Order   
form(method="post"  class="updateform" action="/order/update?id="+user._id)
    table.table
        thead.thead-dark
            tr
                th Name
                td 
                    input.form-control(value = user.firstname name ="firstname")
            tr
                th NIN
                td 
                    input.form-control(value = user.lastname name ="lastname")
            tr
                th contact
                td 
                    input.form-control(value = user.nin name ="nin")
            tr
                th Location
                    td 
                        label Male&nbsp
                        input(value= "male" type="radio" checked = user.gender==="male" name="gender") 
                        label &nbspFemale&nbsp
                        input(value= "female" type="radio" checked = user.gender==="female" name="gender")
            tr
                th Service
                td 
                    input.form-control(value = user.date name ="date")                    
            tr
            tr
                th Request
                td 
                    select.form-control(name="role")  
                        option(value="driver" selected = user.role === "driver") Driver
                        option(value="conductor" selected = user.role === "conductor") Conductor
            tr
                td(colspan=2)
                    button.btn.btn-dark.btn-block(type="submit") Update
script(src=' https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js')
script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js')
